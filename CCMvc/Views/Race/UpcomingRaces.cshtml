@model IEnumerable<CCMvc.ViewModels.RaceViewModel>

<table id="upcomingRacesTable" class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>No. of Runners</th>
            <th>Starts On</th>
            <th>Remarks</th>
        </tr> 
    </thead>
    <tbody>
    @if (Model.Count() > 0)
    {
        foreach (var race in Model)
        {
            <tr>
                <td>
                    <a href='@Url.Action("RaceDetail", "Race", new { raceId = race.RaceId, organizationId = race.OrganizationId })'>
                        @race.Description</a>
                </td>
                <td>@race.Runners</td>
                <td class="utc-to-local">@(race.StartedOnUTC.HasValue ? race.StartedOnUTC.Value.ToString("o") : "")</td>
                <td>@race.Remarks</td>
            </tr>
        }
    }
    else 
    { 
        <tr>
            <td colspan="4">There are no upcoming races</td>
        </tr>
    }

        
    </tbody>
</table>
