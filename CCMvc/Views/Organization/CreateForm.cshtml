@model CCMvc.ViewModels.OrganizationVM

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger" role="alert" id="organizationErrorAlert">
        <strong>Please correct the following errors:</strong>
        @Html.ValidationSummary(false, "")
    </div>
}

<div class="form-group">
    @Html.LabelFor(m => m.Name, new { @class = "col-sm-3 control-label" })
    <div class="col-sm-8">
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.MascotName, new { @class = "col-sm-3 control-label" })
    <div class="col-sm-8">
        @Html.TextBoxFor(m => m.MascotName, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Tagline, new { @class = "col-sm-3 control-label" })
    <div class="col-sm-8">
        @Html.TextBoxFor(m => m.Tagline, new { @class = "form-control" })
    </div>
</div>
