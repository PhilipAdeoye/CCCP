@model IEnumerable<CCMvc.ViewModels.UserViewModel>

<div id="userErrors" class="alert alert-danger" role="alert" style="display:none">
    <strong>Error!</strong>
    <ul></ul>
</div>
<table id="userTable" class="table table-hover">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th class="no-search">Role</th>            
            <th class="no-search no-sort"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td><a href="#" class="editUserBtn" 
                        data-id='@user.UserId' 
                        data-organization-id='@user.OrganizationId'
                        data-url='@Url.Action("Edit", "User")'>
                    @user.Username</a> </td>
                <td>@user.Email</td>
                <td>@user.Firstname</td>
                <td>@user.Lastname</td>
                <td>@user.RoleName</td>                
                <td>
                    @if (user.CanBeDeleted)
                    {
                        <span class="glyphicon glyphicon-remove cursor-pointer delete-icon"
                           aria-label="delete" title="Delete" data-id='@user.UserId'></span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>