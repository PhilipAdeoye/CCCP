<div class="modal fade" id="userCreateModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Create User</h4>
            </div>
            <div class="modal-body">
                @using (Ajax.BeginForm("Create", "User", null, new AjaxOptions
                {
                    HttpMethod = "POST",
                    InsertionMode = InsertionMode.Replace,
                    UpdateTargetId = "createUserForm",
                    OnSuccess = "createUserSucceeded",
                    OnFailure = "createUserFailed"
                }, new { @class = "form-horizontal", @id = "frmCreateUser" }))
                {
                    @Html.AntiForgeryToken()
                    <div id="createUserForm">

                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-form-id="frmCreateUser">Create</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>