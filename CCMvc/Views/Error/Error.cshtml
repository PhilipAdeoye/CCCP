@model CCMvc.ViewModels.ErrorViewModel
@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6">
        <h4>Well, this is embarrassing</h4>
        <hr />
        <p>
            We've encountered an unexpected error. Please help us to identify the problem by 
            giving us details about how you got here.
        </p>
        @using (Html.BeginForm("Error", "Error", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.TextAreaFor(m => m.Message, new { @class = "form-control", @placeholder = "I was ..." })
                @Html.ValidationMessageFor(m => m.Message)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            @Html.ActionLink("Take me home", "Index", "Home", null, new { @class = "btn btn-default", @role = "button" })
        }
    </div>
</div>
